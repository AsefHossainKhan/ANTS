@model IEnumerable<ANTS.Models.User>

@{
    ViewBag.Title = "View Users";
}

<h2>View Users</h2>
<div class="">
    <form action="/Admin/ViewUsers" method="post">
        <input class="form-control" type="text" name="searchtext" value="" placeholder="Search Users via Name" />
        <input class="form-control btn btn-primary" type="submit" value="Search" />
    </form>
</div>

<p>
    @Html.ActionLink("Create New", "CreateManager")
</p>
<table class="table">
    <tr>
        <th>
            Name
        </th>
        <th>
            Status
        </th>
        <th>
            User Type
        </th>
        <th>
            Created At
        </th>
        <th>
            Email
        </th>
        <th>
            Password
        </th>
        <th>
            Image
        </th>
        <th>
            Phone
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.status)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.usertype)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.createdat)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.password)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.image)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.phone)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditUser", new { id=item.userid }) |
            @Html.ActionLink("Details", "Details", new { id=item.userid }) |
            @Html.ActionLink("Delete", "DeleteUser", new { id=item.userid })
        </td>
    </tr>
}

</table>
