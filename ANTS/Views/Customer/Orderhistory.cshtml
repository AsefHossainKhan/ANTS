@model IEnumerable<ANTS.Models.Order>

@{
    ViewBag.Title = "Orderhistory";
}

<h2>Orderhistory</h2>

<p>
    @Html.ActionLink("Back to List", "Index")
</p>

<form action="/Customer/Orderhistory" method="post">
    <input class="form-control" type="text" name="searching" value="" placeholder="Type package name" />
    <input class="form-control" type="submit" class="btn btn-warning" name="Searching" value="Search" />
</form>
<form action="/Customer/Orderhistory" method="get">
    <input class="form-control" type="submit" class="btn btn-primary" name="Showall" value="Show All" />
</form>
<br />
<br />

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.customerphone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.customeraddress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.packageid)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ordername)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.paytype)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.totalprice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.createdat)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.User.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.User1.name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.customerphone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.customeraddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.packageid)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ordername)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.paytype)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.totalprice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.createdat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User1.name)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.orderid }) |
            </td>
        </tr>
    }

</table>
